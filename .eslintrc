{
  "extends": ["airbnb-base"],
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "function-paren-newline": ["error", "consistent"],
    "no-plusplus": 0,
    "no-confusing-arrow": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": ["error", { "consistent": true }]
  },
  "plugins": ["node", "security", "prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": { "ecmaVersion": 2018 }
}
